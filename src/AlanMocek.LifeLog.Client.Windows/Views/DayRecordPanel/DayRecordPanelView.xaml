                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" MinWidth="40">
                                <TextBlock Text=":" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            
                            <Border MinHeight="40" MinWidth="40" Grid.Column="1" Margin="0,10">
                                <TextBlock Text="Icon" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>

                            <Border MinHeight="40" MinWidth="40" Grid.Column="2" Margin="10,10,0,10">
                                <TextBlock Text="Activity Name" VerticalAlignment="Center"/>
                            </Border>

                            <Border MinHeight="40" MinWidth="40" Grid.Column="3" Margin="10,10,0,10" BorderThickness="1" BorderBrush="Black">
                                <TextBlock Text="300" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            
                            <Button Content="Edit" Grid.Column="4" MinHeight="40" MinWidth="40" Margin="10,10,0,10"/>

                            <Button Content="Delete" Grid.Column="5" MinHeight="40" MinWidth="40" Margin="10,10,10,10"/>
                        </Grid>
                    </Border>-->
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Visibility="{Binding CurrentDialog, Converter={StaticResource ObjectExistenceToVisiblityConverter}}" x:Name="DialogGrid" Background="#99000000">
            <ContentPresenter Content="{Binding CurrentDialog}" HorizontalAlignment="Center" VerticalAlignment="Center">

            </ContentPresenter>
        </Grid>
    </Grid>
</UserControl>
